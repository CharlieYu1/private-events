<div class="container">
    <%= simple_form_for(@event) do |f| %>
        <%= f.error_notification %>
        <div class="field">
            <div class="control">
                <%= f.input :location, label: "Location", wrapper: false, label_html: { class: "label"} %>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <%= f.input :date, as: :date, label: "Date", wrapper: false, label_html: { class: "label"} %>
            </div>
        </div>
        <%= f.button :submit, class: "button is-info" %>
    <% end %>
</div>
